{
  "compilerOptions": {
    "target": "ES2023",          // 现代 JS
    "module": "NodeNext",         // 必须和 moduleResolution 配套
    "moduleResolution": "NodeNext",
    "outDir": "out",
    "rootDir": "src",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"]
}
